set daemon 60
#set logfile /home/stephen/betgraph/shared/log/monit.log
set mailserver localhost
set alert arthur.monit@starswan.com
set mail-format { from: monit@starswan.com }

set httpd port 2812 and
   use address localhost
   allow localhost

check process betfair_clock
   with pidfile /home/stephen/betgraph/current/tmp/pids/clock.pid
   start = "/usr/bin/env RAILS_ENV=arthur /home/stephen/betgraph/current/clock.sh start"
   stop  = "/usr/bin/env RAILS_ENV=arthur /home/stephen/betgraph/current/prog_stop.sh clock"
      group betgraph

check process betfair_queue1
   with pidfile /home/stephen/betgraph/current/tmp/pids/queue.pid
   start = "/usr/bin/env RAILS_ENV=arthur /home/stephen/betgraph/current/queue.sh start"
   stop  = "/usr/bin/env RAILS_ENV=arthur /home/stephen/betgraph/current/prog_stop.sh queue"
      group betgraph

