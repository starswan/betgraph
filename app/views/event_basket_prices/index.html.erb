<!-- $Id$ -->
<div class="page-header">
  <b>
    <%= link_to @basket.match.division.name, division_matches_path(@basket.match.division) %>
    Basket Prices
    for
    <%= link_to @basket.match.name, polymorphic_url([@basket.match, :baskets]) %>
    <%= @basket.match.kickofftime.to_s(:kickoff).html_safe %>
  </b>
  <%= format_result(@basket.match) %>
</div>

<%= line_chart([{ name: @basket.basket_rule.name, data: @event_basket_prices.map { |ebp| [ebp.time, ebp.price] }.to_h }],
               min: 0.7,
               max: 1.05,
               height: '500px') %>

<table class="table table-striped table-responsive">
  <tr>
    <th>Time</th>
    <th>Price</th>
    <th>Betsize</th>
  </tr>

<% @event_basket_prices.each do |ebp| %>
  <tr>
    <td><%=h ebp.time %></td>
    <td><%=h ebp.price %></td>
    <td><%=h ebp.betsize %></td>
  </tr>
<% end %>
</table>
