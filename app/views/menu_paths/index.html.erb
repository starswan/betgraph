<!-- $Id$ -->
Menu Paths for <%= @sport.name %>
<table class="table table-striped table-responsive">
<% @menu_paths.sort_by { |mp| mp.name[-1] }.in_groups_of(7) do |mp_group| %>
    <tr>
      <% mp_group.compact.each do |mp| %>
        <td><%= link_to mp.name[-1], mp %></td>
      <% end %>
    </tr>
<% end %>
</table>

