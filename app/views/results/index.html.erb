<h1>Listing results</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Homescore</th>
    <th>Awayscore</th>
  </tr>

<% @results.each do |result| %>
  <tr>
    <td><%=h result.match_id %></td>
    <td><%=h result.homescore %></td>
    <td><%=h result.awayscore %></td>
    <td><%= link_to 'Show', result %></td>
    <td><%= link_to 'Edit', edit_result_path(result) %></td>
    <td><%= link_to 'Destroy', result, :data => { :confirm => 'Are you sure?' }, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New result', new_result_path %>
