<!-- $Id$ -->
<%- model_class = BetMarket -%>
<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human %>
  <%= link_to @match.name, @match %>&nbsp;<%= @bet_market.name %>
  </h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:marketid) %>:</strong></dt>
  <dd><%= @bet_market.marketid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:markettype) %>:</strong></dt>
  <dd><%= link_to @bet_market.markettype, @bet_market.betfair_market_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @bet_market.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:betfair_market_type_id) %>:</strong></dt>
  <dd><%= @bet_market.betfair_market_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_winners) %>:</strong></dt>
  <dd><%= @bet_market.number_of_winners %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @bet_market.description.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_variant) %>:</strong></dt>
  <dd><%= @bet_market.type_variant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:runners_may_be_added) %>:</strong></dt>
  <dd><%= @bet_market.runners_may_be_added %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @bet_market.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:live) %>:</strong></dt>
  <dd><%= @bet_market.live %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @bet_market.active %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.runners', :default => t("helpers.links.runners")),
              bet_market_market_runners_path(@bet_market), :class => 'btn'  %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              match_bet_markets_path(@match), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bet_market_path(@bet_market), :class => 'btn btn-sm btn-outline-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bet_market_path(@bet_market),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-sm btn-outline-danger' %>
</div>
