<!-- $Id$ -->
<h3>
Scorers for <%= link_to @match.name, @match %>
</h3>
<table class="table" border="1">
<tr>
<td>
<table class="table table-striped table-responsive">
<tr><th colspan="3"><%= @match.hometeam.name %></th><th><%= @match.result.homescore if @match.result %></th></tr>
<% @match.homescorers.each do |scorer| %>
    <%= render 'scorer', match: @match, scorer: scorer %>
<% end %>
</table>
</td>
<td>
<table class="table table-striped table-responsive">
<tr><th colspan="3"><%= @match.awayteam.name %></th><th><%= @match.result.awayscore if @match.result %></th></tr>
<% @match.awayscorers.each do |scorer| %>
    <%= render 'scorer', match: @match, scorer: scorer %>
<% end %>
</table>
</td>
</tr>
</table>

<%= link_to 'New scorer', new_soccer_match_scorer_path(@match) %>
