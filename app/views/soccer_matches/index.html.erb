<h4><%= link_to 'Soccer Matches', sport_divisions_path(@division.calendar.sport) %> for <%= @division.name %></h4>

<%= paginate @football_matches %>

<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>Date</th>
    <th>Name</th>
    <th>Markets</th>
    <th colspan="2">Score</th>
    <th colspan="2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @football_matches.each_with_index do |match, index| %>
    <tr>
      <td><%= match.kickofftime.to_s(:kickoff) %></td>
      <td><%= match_name(match) %></td>
<!--      <td><%#=link_to "#{match_name(match)}", division_soccer_match_path(@division, match, :offset => index) %></td>-->
      <td><%= link_to match.bet_markets_count, match_bet_markets_path(match) %></td>
      <td><%= match.homescore %> - <%= match.awayscore %></td>
      <td><%= match.homescorercount %> - <%= match.awayscorercount %></td>
      <td><%=link_to 'Scorers', soccer_match_scorers_path(match), :class => 'btn btn-sm btn-outline-primary' %></td>
      <td><%=link_to 'Edit', edit_division_soccer_match_path(@division, match), :class => 'btn btn-sm btn-outline-primary' %></td>
<!--      <td><%#=link_to 'Delete', division_soccer_match_path(@division, match),-->
<!--                     :data => { :confirm => "Are you sure you wish to delete #{match_name(match)}?" },-->
<!--                     :method => :delete,-->
<!--                     :class => 'btn btn-sm btn-outline-danger' %></td>-->
    </tr>
  <% end %>
  </tbody>
</table>
