<!-- $Id$ -->
<%- model_class = MarketRunner -%>
<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human %> for <%= @market_runner.bet_market.name %></h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:selectionId) %>:</strong></dt>
  <dd><%= @market_runner.selectionId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @market_runner.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:handicap) %>:</strong></dt>
  <dd><%= @market_runner.handicap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:asianLineId) %>:</strong></dt>
  <dd><%= @market_runner.asianLineId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sortorder) %>:</strong></dt>
  <dd><%= @market_runner.sortorder %></dd>
  <dt><strong><%= model_class.human_attribute_name(:market_prices_count) %>:</strong></dt>
  <dd><%= @market_runner.market_prices_count %></dd>
  <dt><strong><%= model_class.human_attribute_name(:betfair_runner_type_id) %>:</strong></dt>
  <dd><%= @market_runner.betfair_runner_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.market', :default => t("helpers.links.market")),
              bet_market_market_runners_path(@market_runner.bet_market), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_market_runner_path(@market_runner), :class => 'btn btn-sm btn-outline-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              market_runner_path(@market_runner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-sm btn-outline-danger' %>
</div>
